<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" 
        content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" 
        content="IE=edge">

    <title>{% block title %}{% endblock %}</title>

    <link rel="canonical" 
        href="{% block canonical %}https://pam.devsagency.net{% endblock %}">
    <link rel="icon" 
        type="image/x-icon" 
        href="img/favicon.ico">
     <link rel="preconnect" 
        href="https://fonts.gstatic.com">

    <meta name="description"
        content="{% block description %}{% endblock %}">
    <meta name="author"     
        content="Philippe Beck">

    <meta property="og:type"        
        content="website">
    <meta property="og:title"       
        content="{{ block('title') }}">
    <meta property="og:url"         
        content="{{ block('canonical') }}">
    <meta property="og:description" 
        content="{{ block('description') }}">
    <meta property="og:image"       
        content="{% block image %}img/pam.png{% endblock %}">

    <meta name="twitter:card"           
        content="">
    <meta name="twitter:title"          
        content="{{ block('title') }}">
    <meta name="twitter:site"           
        content="{{ block('canonical') }}">
    <meta name="twitter:summary"    
        content="{{ block('description') }}">
    <meta name="twitter:image"          
        content="{{ block('image') }}">
    <meta name="twitter:creator"        
        content="@philippepjbeck">

    <link rel="stylesheet" 
        href="https://fonts.googleapis.com/css2?family=Gotu&family=Rufina&family=Source+Code+Pro&display=swap"> 
    <link rel="stylesheet" 
        href="node_modules/@fortawesome/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" 
        href="node_modules/animadio/dist/min/animadio.min.css">
    <link rel="stylesheet" 
        href="css/style.css">
</head>

<body>
    {{ include('layout/navbar.twig') }}

    <header>
        {% if (hasAlert()) %}
            <p id="alert" 
                class="bg-{{ getAlertType() }} color-white align-center">
                {{ getAlertMessage() }}
            </p>
        {% endif %}

        <h1 class="color-violet">{{ block('title') }}</h1>
    </header>

    {% block main %}{% endblock %}

    {{ include('layout/footer.twig') }}

    {% block script %}{% endblock %}
</body>
</html>
