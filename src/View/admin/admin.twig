{% extends 'layout/layout.twig' %}

{% block title %}Administration{% endblock %}

{% block description %}{% endblock %}

{% block main %}
    <input id="menu-radio1" class="menu-radio1" type="radio" name="menu" checked>
    <input id="menu-radio2" class="menu-radio2" type="radio" name="menu">
    <input id="menu-radio3" class="menu-radio3" type="radio" name="menu">
    <input id="menu-radio4" class="menu-radio4" type="radio" name="menu">

    <nav class="menu">
        <label class="button-red btn-lg" for="menu-radio1" title="Show the Classes">
            <i class="far fa-file-code fa-lg"></i> Class
        </label>
        <label class="button-green btn-lg" for="menu-radio2" title="Show the Properties">
            <i class="fas fa-atom fa-lg"></i> Property
        </label>
        <label class="button-blue btn-lg" for="menu-radio3" title="Show the Methods">
            <i class="fas fa-redo-alt fa-lg"></i> Method
        </label>
        <label class="button btn-lg" for="menu-radio4" title="Show the Users">
            <i class="far fa-user fa-lg"></i> User
        </label>
    </nav>

    <main id="admin" class="menu-relay">
        {{ include('admin/adminClass.twig') }}
        {{ include('admin/adminProperty.twig') }}
        {{ include('admin/adminMethod.twig') }}
        {{ include('admin/adminUser.twig') }}
    </main>
{% endblock %}