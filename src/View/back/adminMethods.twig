<section class="menu-target4">
    <h2>
        <i class="fas fa-redo-alt"></i> 
        Method
    </h2>

    <a class="btn-green btn-lg" 
        href="{{ url('method!create') }}">
        New Method
    </a>

    <table class="table">
        <thead>
        <tr>
            <th>Method</th>
            <th>Infos</th>
        </tr>
        </thead>
        <tbody>

        {% for method in methods %}
            <tr>
                <td>
                    {% if method.static %}
                        {{ method.visibility }}
                        static function 
                        {{ method.method }}()
                    {% else %}
                        {{ method.visibility }}
                        function 
                        {{ method.method }}()
                    {% endif %}
                    <br>
                    <a class="btn-blue" 
                        href="{{ url('method!update', {'id': method.id}) }}">
                        <i class="fas fa-pen-square fa-fw fa-lg"></i>
                    </a>
                    <a class="btn-red" 
                        href="{{ url('method!delete', {'id': method.id}) }}">
                        <i class="fas fa-times-circle fa-fw fa-lg"></i>
                    </a>
                </td>
                <td>
                    {{ method.detail }}
                    
                    {% if method.parameters %}
                        <hr>
                        @param {{ method.parameters }}
                    {% endif %}
                
                    {% if method.return %}
                        <hr>
                        @return {{ method.return }}
                    {% endif %}

                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
</section>
