<section class="menu-target2">
    <h2>
        <i class="far fa-file-code"></i> 
        Class
    </h2>

    <a class="btn-green btn-lg" 
        href="{{ url('class!create') }}">
        New Class
    </a>

    <table class="table">
        <thead>
        <tr>
            <th>Class</th>
            <th>Infos</th>
        </tr>
        </thead>
        <tbody>

        {% for class in classes %}
            <tr>
                <td>
                    {% if class.abstract %}
                        abstract class {{ class.class }}
                    {% else %}
                        class {{ class.class }}
                    {% endif %}
                    <br>
                    <a class="btn-blue" 
                        href="{{ url('class!update', {'id': class.id}) }}">
                        <i class="fas fa-pen-square fa-fw fa-lg"></i>
                    </a>
                    <a class="btn-red" 
                        href="{{ url('class!delete', {'id': class.id}) }}">
                        <i class="fas fa-times-circle fa-fw fa-lg"></i>
                    </a>
                </td>
                <td>
                    {{ class.detail }}
                    
                    {% if class.extends %}
                        <hr>
                        extends {{ class.extends }}
                    {% endif %}

                    {% if class.parameters %}
                        <hr>
                        @param {{ class.parameters }}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
</section>
