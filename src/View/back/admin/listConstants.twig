<section class="menu-target1">
    <h2>
        <i class="fas fa-cogs"></i> 
        Constant
    </h2>

    <a class="btn-green btn-lg" 
        href="{{ url('constant!create') }}">
        New Constant
    </a>

    <table class="table">
        <thead>
        <tr>
            <th>
                Id. Constant
                <hr>
                Category
            </th>
            <th>Value</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>

        {% for constant in constants %}
            <tr>
                <td>

                    {% if constant.to_replace %}
                        <p class="color-red">
                            {{ constant.id }}. {{ constant.name }}
                        </p>
                    
                    {% else %}
                        <p class="color-brown">
                            {{ constant.id }}. {{ constant.name }}
                        </p>
                    {% endif %}

                    <hr>
                    {{ constant.category }}

                </td>
                <td>{{ constant.valor }}</td>
                <td>
                    <a class="btn-blue" 
                        href="{{ url('constant!update', {'id': constant.id}) }}">
                        <i class="fas fa-pen-square fa-fw fa-lg"></i>
                    </a>
                    <br>
                    <a class="btn-red" 
                        href="{{ url('constant!delete', {'id': constant.id}) }}">
                        <i class="fas fa-times-circle fa-fw fa-lg"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
</section>
