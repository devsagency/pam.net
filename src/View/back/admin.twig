{% extends 'layout/layout.twig' %}

{% block title %}Administration{% endblock %}

{% block description %}{% endblock %}

{% block main %}
    <input id="menu-radio1" 
        class="menu-radio1" 
        type="radio" 
        name="menu" 
        checked>
    <input id="menu-radio2" 
        class="menu-radio2" 
        type="radio" 
        name="menu">
    <input id="menu-radio3" 
        class="menu-radio3" 
        type="radio" 
        name="menu">
    <input id="menu-radio4" 
        class="menu-radio4" 
        type="radio" 
        name="menu">
    <input id="menu-radio5" 
        class="menu-radio5" 
        type="radio" 
        name="menu">

    <nav class="menu">
        <label for="menu-radio1" 
            title="Show the constants">
            <i class="fas fa-cogs"></i>
            <span>
                Constant
            </span>
        </label>
        <label for="menu-radio2" 
            title="Show the Classes">
            <i class="far fa-file-code"></i>
            <span>
                Class
            </span>
        </label>
        <label for="menu-radio3" 
            title="Show the Properties">
            <i class="fas fa-atom"></i>
            <span>
                Property
            </span>
        </label>
        <label for="menu-radio4" 
            title="Show the Methods">
            <i class="fas fa-redo-alt"></i>
            <span>
                Method
            </span>
        </label>
        <label for="menu-radio5" 
            title="Show the Adminsitrators">
            <i class="fas fa-user"></i>
            <span>
                Administrator
            </span>
        </label>
    </nav>

    <main id="admin" 
        class="menu-relay">

        {{ include("back/adminConstants.twig") }}
        {{ include("back/adminClasses.twig") }}
        {{ include("back/adminProperties.twig") }}
        {{ include("back/adminMethods.twig") }}
        {{ include("back/adminUsers.twig") }}
        
    </main>
{% endblock %}
