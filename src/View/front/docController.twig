<article id="controller-home"
    class="menu-target4">
    <h2>
        <i class="fas fa-server"></i> 
        Controller
    </h2>

    <nav class="sidebar">
        <input id="sidebar-controller"
            class="sidebar-check" 
            type="checkbox">
        <label for="sidebar-controller"
            class="sidebar-open" 
            title="Show Sidebar">
            <i class="far fa-eye fa-lg fa-fw"></i>
        </label>
        <label for="sidebar-controller"
            title="Hide Sidebar">
            <i class="far fa-eye-slash fa-lg fa-fw"></i>
        </label>

        {% for class in classes %}
            {% if 'Controller' in class.path %}
            <a href="#{{ class.class|lower }}"
                title="{{ class.class }}">
                {{ loop.index }}
            </a>
            {% endif %}
        {% endfor %}

        <a href="#controller-home" 
            title="Controller Home">
            <i class="fas fa-chevron-circle-up fa-lg fa-fw"></i>
        </a>
    </nav>

    <ul class="flex">

        {% for class in classes %}
            {% if 'Controller' in class.path %}
                <li>
                    <a class="button-secondary" 
                        href="#{{ class.class|lower }}">
                        {{ loop.index }} - 
                        {{ class.class }}
                    </a>
                </li>
            {% endif %}
        {% endfor %}

    </ul>

    {% for class in classes %}
        {% if 'Controller' in class.path %}
            {{ include('front/docMVC.twig') }}
        {% endif %}
    {% endfor %}

</article>
